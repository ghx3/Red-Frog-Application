<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="RedFrogs.Views.SignUpPage">
    <!--create account function-->
  <ContentPage.Content>
        <StackLayout>
                <Label Text="Create user Name" FontSize="16" />
                <Entry x:Name="accountName" TextColor="Black" Margin="10, 0, 10, 5" Placeholder="user name (minimum 5 letters)" Keyboard="Default" />
                <Label Text="Create user Password" FontSize="16" />
                <Entry x:Name="accountPassword" IsPassword="True" TextColor="Black" Margin="10, 0, 10, 5"
                       Placeholder ="user password" />

            <Entry x:Name="accountPassword1" IsPassword="True" TextColor="Black" Margin="10, 0, 10, 5"
                       Placeholder ="Please type password again" />


            <Button x:Name="Create" Margin="10, 0, 10, 0" TextColor="White" BorderRadius="10"
                               Clicked="CreateAccount" BackgroundColor="#bf3336" Text="Create" />
           </StackLayout>
    </ContentPage.Content>
</ContentPage>